<Window x:Class="DDCImprover.Avalonia.MessageBox"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageBox" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Topmost="True">
  <StackPanel Margin="12">
    <TextBlock x:Name="messageText" HorizontalAlignment="Center">Message</TextBlock>
    <Button x:Name="okButton" Margin="0,10,0,0" HorizontalAlignment="Center" Padding="20,5">OK</Button>
  </StackPanel>
</Window>